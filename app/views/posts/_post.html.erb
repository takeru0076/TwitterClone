<div id="<%= dom_id post %>">
  <p>
    <strong>Context:</strong>
    <%= post.context %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

  <% if post.image.present? %>
    <p>
      <strong>Image:</strong><br>
      <%= image_tag(post.image.url, size: "300x300") %>
    </p>
  <% end %>
</div>
